\newcommand{\leftAlignedWithCenterUnderlineSign}[2]{
\begin{flushleft} 
#1 \\
\centerline{ \scriptsize  #2 } 
\end{flushleft}
}

\newcommand{\centerAlignedWithCenterUnderlineSign}[2]{
\centering{\underline{#1}}
\centerline{ \scriptsize  #2 }
}

\newcommand{\withCenterUnderlineSign}[2]{
#1 \\
\begin{center} {\scriptsize  {#2}} \end{center} 
}

\newcommand{\withRightUnderlineSign}[2]{
#1 \\
\begin{flushright} { \scriptsize  #2 } \end{flushright} 
}

\newcommand{\withLeftUnderlineSign}[2]{
#1 \\
\begin{flushleft} { \scriptsize  #2 } \end{flushleft} 
}

\newcommand{\underlined}[1]{
    \uline{#1 \hfill}
}

\newcommand{\underlinedNoFill}[1]{
    \uline{#1} 
}

