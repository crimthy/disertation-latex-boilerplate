\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{lib/image-manager}[2019 LMDB lib]
 
\RequirePackage{graphicx}
\RequirePackage{lib/caption}
\graphicspath{ {./media/images/} }

\newcounter{globalImageCounter}
\setcounter{globalImageCounter}{1}
\newcommand{\printImage}[2]{
    \begin{center}
        \includegraphics[width=0.5\textwidth]{#1}
    \end{center}
    \begin{imageCaption}[H]
        \caption{#2}
    \end{imageCaption}
\stepcounter{globalImageCounter}
}