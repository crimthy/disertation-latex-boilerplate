\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{lib/caption}[2019 LMDB lib]
 

\RequirePackage{silence}
\WarningFilter*{memoir}{You are using the caption package with the memoir class}

\RequirePackage{caption}
\RequirePackage{capt-of}
\RequirePackage{float}

\DeclareCaptionType{imageCaption}[Рисунок][Список зображень]
\DeclareCaptionType{subImageCaption}[Рисунок][Список зображень]
\DeclareCaptionType{tableCaption}[Таблиця][Список таблиць]
\DeclareCaptionType{codeCaption}[Лістинг][Список лістингів]

\DeclareCaptionLabelSeparator{longDash}{ $ - $ }

% subsection numbering
\usepackage{chngcntr}
\counterwithin{imageCaption}{section}
\counterwithin{subImageCaption}{subsection}
\counterwithin{tableCaption}{section}
\counterwithin{codeCaption}{section}
\counterwithin{equation}{section}
\numberwithin{table}{section}

\captionsetup[codeCaption]{
  labelsep=longDash,
  justification=centering
}

\captionsetup[imageCaption]{
  %format=plain,
  %justification=raggedright,
  %]singlelinecheck=false,
  %font=small,
  %font={bf,sf},
  labelsep=longDash,
  justification=centering
}

\captionsetup[subImageCaption]{
  %format=plain,
  %justification=raggedright,
  %]singlelinecheck=false,
  %font=small,
  %font={bf,sf},
  labelsep=longDash
}

\captionsetup[tableCaption]{
  %format=plain,
  %justification=raggedright,
  %singlelinecheck=false,
  %font=small,
  %font={bf,sf},
  labelsep=longDash,
  justification=raggedright,
  singlelinecheck=false,
  skip=-1ex,
  margin=\fivecharsapprox
}

\captionsetup[longtable]{
  labelsep=longDash,
  justification=raggedright,
  singlelinecheck=false,
  skip=3ex,
  margin=\fivecharsapprox,
  name=Таблиця
}